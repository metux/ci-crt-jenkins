mkdir -p /var/lib/libvirt/boot

virsh net-autostart default
virsh net-start default

cp /root/.ssh/id_rsa.pub postinst/

tar -czf postinst.tar.gz postinst

virt-install --virt-type kvm --name stretch-amd64 \
--cpu host \
--location http://httpredir.debian.org/debian/dists/stretch/main/installer-amd64/ \
--extra-args "console=ttyS0 DEBIAN_FRONTEND=noninteractive" -v --os-variant debiansqueeze \
--disk size=4 --memory 512 \
--initrd-inject preseed.cfg \
--initrd-inject postinst.sh \
--initrd-inject postinst.tar.gz \
--initrd-inject /root/.ssh/id_rsa.pub
